<idea-plugin version="2">
    <id>com.github.shchurov.prefseditor</id>
    <name>Android SharedPreferences editor</name>
    <version>1.0</version>
    <vendor email="shchurov.m@gmail.com" url="https://github.com/shchurov">Mykhailo Shchurov</vendor>

    <description><![CDATA[
      Experimental SharedPreferences Editor plugin for AndroidStudio and IntelliJ IDEA.<br>
      Github page: https://github.com/shchurov/SharedPreferences-Editor-Plugin
    ]]></description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <depends>org.jetbrains.android</depends>

    <actions>
        <action id="com.github.shchurov.prefseditor.OpenEditorAction"
                class="com.github.shchurov.prefseditor.OpenEditorAction"
                text="SharedPreferences Editor">
            <add-to-group group-id="ToolsMenu"/>
        </action>
    </actions>

</idea-plugin>